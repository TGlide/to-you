.btn {
	background-color: var(--palette-grey-95);
	border-radius: var(--radii-s);
	cursor: pointer;
	outline: 2px solid var(--outline-color, transparent);

	font-family: var(--ff-body);
	font-size: var(--fs-m);
	line-height: var(--line-height-m);

	padding: var(--space-8) var(--space-12);

	transition: var(--transition-appearance);

	&:disabled {
		cursor: not-allowed;
		opacity: 0.5;
	}

	&:not(:disabled) {
		&:hover {
			background-color: var(--palette-grey-90);
		}

		&:focus,
		&:active {
			background-color: var(--palette-grey-95);
			--outline-color: var(--palette-cyan-40);
		}
	}
}

.btn-danger {
	color: var(--palette-red-60);

	&:not(:disabled) {
		&:focus,
		&:active {
			--outline-color: var(--palette-red-60);
		}
	}
}

.btn-s {
	font-size: var(--fs-s);
	line-height: var(--line-height-s);
	padding: var(--space-4) var(--space-8);
}

.btn-icon {
	display: flex;
	align-items: center;
	justify-content: center;

	padding: var(--space-4) var(--space-4);
}
