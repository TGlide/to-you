.theme-light,
.theme-dark {
  background-color: var(--color-background);
  color: var(--color-foreground);
}

.theme-light {
  --color-background-hsl: var(--palette-white-hsl);
  --color-background: hsl(var(--color-background-hsl));
  --color-foreground: var(--palette-grey-900);
}

.theme-dark {
  --color-background-hsl: var(--palette-grey-900-hsl);
  --color-background: hsl(var(--color-background-hsl));
  --color-foreground: var(--palette-white);
}
